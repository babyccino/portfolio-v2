<canvas
  transition:name="canvas"
  transition:persist
  id="three"
  class="fade-in fixed inset-0 overflow-hidden"
>
</canvas>

<script>
  import BlockWave from "../lib/block-wave"

  setTimeout(() => canvas.classList.remove("fade-in"), 4000)

  const canvas = document.getElementById("three") as HTMLCanvasElement
  const fun = new BlockWave(canvas)
  fun.animate()
</script>

<style lang="scss">
  .fade-in {
    // animation: fade-in 2s ease-in-out 2s forwards;
    opacity: 1;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
