---
import { getCollection } from "astro:content"
import Layout from "../../layouts/Layout.astro"
const collection = await getCollection("experience")
const experience = await Promise.all(
  collection.map(async entry => ({
    ...entry,
    content: await entry.render(),
  })),
)

const formatDate = (date: string) => {
  if (date === "Present") return "Present"
  const d = new Date(date)
  return `${d.toLocaleString("default", { month: "long" })} ${d.getFullYear()}`
}
---

<Layout title="Gus Ryan - Experience">
  <main id="experience" class="flex min-h-screen flex-col justify-center pl-24">
    <ul class="group my-20 space-y-4">
      {
        experience.map(entry => (
          <li class="relative rounded-xl p-4 transition hover:bg-slate-400 hover:bg-opacity-15 hover:!opacity-100 group-hover:opacity-60">
            <a class="block text-sm text-gray-400" href={`/portfolio/experience/${entry.slug}`}>
              <h3 class="text-base text-gray-200">{entry.data.title}</h3>
              <p class="mt-1 font-medium text-gray-600">
                {formatDate(entry.data.started)} - {formatDate(entry.data.ended)}
              </p>
              <div class="mt-1">
                <entry.content.Content />
              </div>
              <ul class="mt-2 space-x-2 text-xs text-gray-400">
                {entry.data.technologies.map((tech: string) => (
                  <li class="inline-block rounded-full bg-slate-400 bg-opacity-15 px-2 py-1">
                    {tech}
                  </li>
                ))}
              </ul>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
